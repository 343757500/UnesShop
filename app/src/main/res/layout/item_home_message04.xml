<?xml version="1.0" encoding="utf-8"?>
<!--
    首页RecycleView Item布局：头部item
    @author: Jinquan
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ll_shape"
    android:padding="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    >

    <LinearLayout
        android:id="@+id/ll_select"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
               android:id="@+id/iv"
               android:layout_width="match_parent"
                android:layout_height="173dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="白帽子"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/ll_select"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/item_text_selected"
            android:text="9999"
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1999"
            android:id="@+id/tv_refpre"
            android:layout_toRightOf="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_shop"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_gwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>
